modules = ["nodejs-20", "web"]
run = "npm run dev"

[nix]
channel = "stable-24_05"

[deployment]
deploymentTarget = "static"
publicDir = "dist"

[workflows]
runButton = "Run"

[[workflows.workflow]]
name = "Run"
author = 40600442
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd modern-faq-embeder-main && npm install && npm run build && cp -r dist ../dist"

[[ports]]
localPort = 8080
externalPort = 80

[[ports]]
localPort = 8085
externalPort = 3000
exposeLocalhost = true
